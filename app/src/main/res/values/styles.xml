<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionAndStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ListRecipeName">
        <item name="android:background">@color/transparentBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/recipe_name_padding</item>
        <item name="android:textSize">@dimen/recipe_name_text_size</item>
    </style>

    <style name="IngredientQuantity">
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">@dimen/ingredient_text</item>
    </style>

    <style name="IngredientName">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/ingredient_text</item>
    </style>

    <style name="StepDescription">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/step_description_text_size</item>
        <item name="android:padding">@dimen/step_description_padding</item>
    </style>

</resources>
